<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.tests.TestFragment"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:padding="3dp">

    <TextView
        android:id="@+id/test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"

        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Тест &quot;Применение производной к исследованию функции&quot;"
        />

    <TextView
        android:id="@+id/test_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        tools:text="Абракадабра это тестовый текст в тесте хахахаххах тут описание короче
аавыаыва лаазаз ъвхввхвхвхвхв фа матекматика производная #зубы аааа"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#939393"
        android:layout_marginVertical="3dp"
        />

</LinearLayout>