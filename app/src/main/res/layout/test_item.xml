<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    android:background="@color/passed_test_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/test_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        tools:text="Применение производной к решению задач"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeTextType="uniform"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/author"
        app:layout_constraintHorizontal_weight="0.7"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/test_category"

        tools:text="Категория: Математика"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@id/test_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/author"
        app:layout_constraintHorizontal_weight="0.7"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/test_subsection"

        tools:text="Тема: Производная"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@id/test_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/author"
        app:layout_constraintHorizontal_weight="0.7"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/author"

        tools:text="Автор:\n admin"
        android:textAlignment="textEnd"
        android:textSize="15sp"

        app:layout_constraintLeft_toRightOf="@id/test_name"
        app:layout_constraintTop_toBottomOf="@id/test_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.3"/>

</androidx.constraintlayout.widget.ConstraintLayout>
